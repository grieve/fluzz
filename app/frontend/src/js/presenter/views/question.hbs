<div class="container presenter">
    <div class="row">
        <div class="col-lg-10 answer-column">
            <div class="question-pane">
                <span class="question-text">
                    {{question.question}}
                </span>
            </div>
            <div class="answer-grid">
                <button class="btn btn-info btn-lg btn-buzz-answer"></button>
                <span class="answer">
                    {{question.options.[0]}}
                </span>
                <button class="btn btn-primary btn-lg btn-buzz-answer"></button>
                <span class="answer">
                    {{question.options.[1]}}
                </span>
                <button class="btn btn-success btn-lg btn-buzz-answer"></button>
                <span class="answer">
                    {{question.options.[2]}}
                </span>
                <button class="btn btn-danger btn-lg btn-buzz-answer"></button>
                <span class="answer">
                    {{question.options.[3]}}
                </span>
            </div>
        </div>
        <div class="col-lg-2">
            <ul class="list-group players-list">
                <li class="list-group-item list-group-item-info">
                    <span class="badge">14</span>
                    Neil
                </li>
                <li class="list-group-item">
                    <span class="badge">14</span>
                    Paddy
                </li>
                <li class="list-group-item list-group-item-success">
                    <span class="badge">14</span>
                    Grieve
                </li>
                <li class="list-group-item list-group-item-primary">
                    <span class="badge">14</span>
                    Dan
                </li>
                <li class="list-group-item">
                    <span class="badge">14</span>
                    King Lemur of the Big Names
                </li>
                <li class="list-group-item list-group-item-danger">
                    <span class="badge">14</span>
                    Liam
                </li>
            </ul>
        </div>
    </div>
</div>
